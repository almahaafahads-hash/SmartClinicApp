@model SmartClinicApp.Domain.Patient

<form asp-action="Create">

    <div class="form-group">
        <label>اسم المريض الكامل</label>
        <input asp-for="FullName" class="form-control" />
    </div>

    <div class="form-group">
        <label>رقم الهوية</label>
        <input asp-for="NationalId" class="form-control" />
    </div>

   

    <button type="submit" class="btn btn-success mt-3">حفظ البيانات</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">إلغاء</a>

</form>