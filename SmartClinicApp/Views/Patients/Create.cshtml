@model SmartClinicApp.Domain.Patient

<h2>إضافة مريض جديد</h2>

<form asp-action="Create">
    <div class="form-group">
        <label>اسم المريض الكامل</label>
        <input asp-for="FullName" class="form-control" />
    </div>

    <div class="form-group">
        <label>التاريخ الطبي</label>
        <input asp-for="MedicalHistory" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success mt-3">حفظ البيانات</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">إلغاء</a>
</form>