@model IEnumerable<SmartClinicApp.Domain.Patient>

<div class="container-fluid">

    <!-- العنوان -->
    <div class="d-flex align-items-center mb-4">
        <img src="~/img/undraw_profile_2.svg" style="width: 60px;" class="me-3" />
        <div>
            <h1 class="h3 mb-0 text-gray-800">إدارة المرضى</h1>
            <p class="text-muted mb-0">نظام العيادة الذكية - عرض وتعديل بيانات المرضى</p>
        </div>
    </div>

    <!-- زر إضافة -->
    <a asp-action="Create" class="btn btn-primary mb-4">
        ➕ إضافة مريض جديد
    </a>

    <!-- الجدول -->
    <div class="card shadow mb-4">

        <div class="card-header py-3 bg-primary text-white">
            <h6 class="m-0 font-weight-bold">بيانات المرضى المسجلين</h6>
        </div>

        <div class="card-body">

            <div class="table-responsive">

                <table class="table table-bordered table-hover text-center">

                    <thead class="table-light">
                        <tr>
                            <th>الرقم</th>
                            <th>الاسم الكامل</th>
                            <th>رقم الهوية</th>
                            <th>الإجراءات</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td class="fw-bold text-primary">@item.FullName</td>
                                <td>@item.NationalId</td>

                                <td>
                                    <!-- تعديل -->
                                    <a asp-action="Edit"
                                       asp-route-id="@item.Id"
                                       class="btn btn-info btn-sm text-white">
                                        ✏️ تعديل
                                    </a>

                                    <!-- حذف (يوديك صفحة تأكيد) -->
                                    <a asp-action="Delete"
                                       asp-route-id="@item.Id"
                                       class="btn btn-danger btn-sm">
                                        🗑️ حذف
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>

            </div>

        </div>

    </div>

</div>