<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Smart Clinic</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SmartClinicApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 py-3">
            <div class="container">
                <a class="navbar-brand font-weight-bold text-primary" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-hand-holding-medical me-2"></i> Smart Clinic
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 ms-auto justify-content-end">
                        <li class="nav-item">
                            <a class="nav-link text-dark px-3 hover-underline" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1 text-primary"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark px-3 hover-underline" asp-controller="Doctors" asp-action="Index">
                                <i class="fas fa-user-md me-1 text-primary"></i> Doctors
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark px-3 hover-underline" asp-controller="Patients" asp-action="Index">
                                <i class="fas fa-user-injured me-1 text-primary"></i> Patients
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark px-3 hover-underline" asp-controller="Appointments" asp-action="Index">
                                <i class="fas fa-calendar-check me-1 text-primary"></i> Appointments
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-light py-3 mt-5">
        <div class="container text-center">
            &copy; 2026 - <span class="text-primary font-weight-bold">Smart Clinic Management System</span> - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <style>
        .hover-underline {
            font-weight: 500;
            transition: all 0.3s ease;
            border-bottom: 2px solid transparent;
        }

            .hover-underline:hover {
                color: #007bff !important;
                border-bottom: 2px solid #007bff;
            }

        .navbar-brand {
            font-size: 1.5rem;
            letter-spacing: 1px;
        }
    </style>
</body>
</html>