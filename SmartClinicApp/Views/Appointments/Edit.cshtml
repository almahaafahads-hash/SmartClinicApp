@model SmartClinicApp.Domain.Appointment

<div class="container">
    <h2 class="mb-4">تعديل الموعد</h2>

    <form asp-action="Edit">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label class="form-label">المريض</label>
            <select asp-for="PatientId" class="form-control" asp-items="ViewBag.PatientId"></select>
        </div>

        <div class="mb-3">
            <label class="form-label">الطبيب</label>
            <select asp-for="DoctorId" class="form-control" asp-items="ViewBag.DoctorId"></select>
        </div>

        <div class="mb-3">
            <label class="form-label">وقت الموعد</label>
            <input asp-for="AppointmentDate" type="datetime-local" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">حفظ التعديلات</button>
        <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
    </form>
</div>