@model IEnumerable<SmartClinicApp.Domain.Appointment>

<div class="container-fluid">
    @* الهيدر العلوي مع أيقونة المواعيد المتناسقة مع الواجهة الرئيسية *@
    <div class="d-flex align-items-center mb-4">
        <img src="~/img/undraw_posting_photo.svg" style="width: 60px;" class="me-3" alt="Appointment Icon" />
        <div>
            <h1 class="h3 mb-0 text-gray-800">إدارة المواعيد</h1>
            <p class="text-muted mb-0">جدولة المواعيد والربط بين الأطباء والمرضى</p>
        </div>
    </div>

    @* زر إضافة موعد جديد بتصميم متناسق *@
    <a asp-action="Create" class="btn btn-info text-white mb-4 shadow-sm">
        <i class="fas fa-calendar-plus"></i> إضافة موعد جديد
    </a>

    @* قالب الجدول الاحترافي مع الظلال والحواف الناعمة *@
    <div class="card shadow mb-4 border-0">
        <div class="card-header py-3 bg-info text-white">
            <h6 class="m-0 font-weight-bold">قائمة المواعيد المجدولة</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="appointmentsTable" width="100%" cellspacing="0">
                    <thead class="table-light text-center">
                        <tr>
                            <th>رقم الموعد</th>
                            <th>المريض</th> @* سيظهر الاسم بدلاً من الرقم *@
                            <th>الطبيب</th>  @* سيظهر الاسم بدلاً من الرقم *@
                            <th>وقت الموعد</th>
                            <th>الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody class="text-center">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="align-middle">@item.Id</td>

                                @* الربط الذكي: عرض الاسم الكامل للمريض *@
                                <td class="align-middle font-weight-bold text-success">
                                    @(item.Patient != null ? item.Patient.FullName : "غير محدد")
                                </td>

                                @* الربط الذكي: عرض الاسم الكامل للطبيب *@
                                <td class="align-middle font-weight-bold text-primary">
                                    @(item.Doctor != null ? item.Doctor.Name : "غير محدد")
                                </td>

                                <td class="align-middle">
                                    @item.AppointmentDate.ToString("yyyy/MM/dd - hh:mm tt")
                                </td>

                                <td class="align-middle">
                                    <div class="btn-group">
                                        <a class="btn btn-outline-info btn-sm" asp-action="Edit" asp-route-id="@item.Id">تعديل</a>
                                        <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">حذف</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @* إضافة تأثيرات site.css التفاعلية *@
    <script>
        $(document).ready(function() {
            console.log("جدول المواعيد جاهز!");
        });
    </script>
}S