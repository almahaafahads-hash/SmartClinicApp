@model SmartClinicApp.Domain.Doctor

<div class="container mt-4">
    <h3 class="mb-3">تعديل بيانات الطبيب</h3>

    <div class="card shadow-sm">
        <div class="card-body">

            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="form-group mb-3">
                    <label>اسم الطبيب</label>
                    <input asp-for="Name" class="form-control" />
                </div>

                <div class="form-group mb-3">
                    <label>التخصص</label>
                    <input asp-for="Specialization" class="form-control" />
                </div>

                <button type="submit" class="btn btn-info text-white">حفظ التعديل</button>
                <a asp-action="Index" class="btn btn-secondary">رجوع</a>
            </form>

        </div>
    </div>
</div>