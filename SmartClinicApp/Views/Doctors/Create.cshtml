@model SmartClinicApp.Domain.Doctor

<div class="container mt-4">
    <h2>إضافة طبيب جديد</h2>
    <hr />

    <form asp-action="Create">
        <div class="form-group mb-3">
            <label class="form-label">اسم الدكتور</label>
            <input asp-for="Name" class="form-control" placeholder="مثلاً: د. أحمد" />
        </div>

        <div class="form-group mb-3">
            <label class="form-label">التخصص</label>
            <input asp-for="Specialization" class="form-control" placeholder="مثلاً: قلب، أطفال..." />
        </div>

        <button type="submit" class="btn btn-success">حفظ بيانات الطبيب</button>
        <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
    </form>
</div>